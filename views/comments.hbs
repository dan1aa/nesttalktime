<div class="feedbacks__comments">
    {{>header}}
    <div class="comments__wrapper">
        <div class="comment__feedback animated fadeInLeft">
            <span class="comment__feedback__id">{{feedback._id}}</span>
            <div class="comment__feedback__sender">
                <img class="comment__feedback__avatar" src={{feedback.senderImg}} alt="">
                <h2 class="comment__feedback__sender__name">{{feedback.sender}}</h2>
            </div>
            <div class="comment__feedback__text__wrapper">
                <span class="comment__feedback__text">{{feedback.feedback}}</span>
                <span class="personal__feedback__rating__date">‚≠ê{{feedback.rating}} &nbsp; <b>{{feedback.date}}</b></span>
            </div>
        </div>
        <button class="leave__comment__button animated fadeInRight">Leave Comment</button>
        <form class="comment__section__wrapper" action="/comments/create/{{feedback.url}}/{{feedback._id}}" method="POST">
            <select name="commentName" id="comment" class="comment__username" required>
                <option hidden selected value="">Choose your name</option>
                {{#each users}}
                <option value="{{name}}">{{name}}</option>
                {{/each}}
            </select>
            <textarea required placeholder="Enter your comment" name="comment" class="comment__body"></textarea>
            <div class="leave__comment__buttons">
                <button class="leave__comment__cancel">Cancel</button>
                <button type="submit" class="leave__comment__send">Send</button>
            </div>
        </form>
        <div class="comments">
            {{#if feedback.comments}}
            {{#each feedback.comments}}
            <div class="comment animated fadeInRight">
                <span class="comment__name">{{commentName}}</span>
                <span class="comment__text">{{comment}}</span>
                <span class="comment__date">{{date}}</span>
            </div>
            {{/each}}
            {{else}}
            <span class="nocomments__warning animated fadeInLeft">No comments yet...Try to add one!</span>
            {{/if}}
        </div>
    </div>
</div>
<script src="/js/comments.js"></script>